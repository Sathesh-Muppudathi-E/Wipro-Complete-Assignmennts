@model EmployeeFormApp.Models.EmployeeForm

<h2>Employee Details</h2>

<div>
    <dl class="row">

        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>


        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Age</dt>
        <dd class="col-sm-10">@Model.Age</dd>

        <dt class="col-sm-2">Date of Birth</dt>
        <dd class="col-sm-10">@Model.DateOfBirth.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.Country</dd>

        <dt class="col-sm-2">Email Id</dt>
        <dd class="col-sm-10">@Model.EmailId</dd>

        <dt class="col-sm-2">Gender</dt>
        <dd class="col-sm-10">@Model.Gender</dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="List" class="btn btn-secondary">Back to List</a>
</div>
