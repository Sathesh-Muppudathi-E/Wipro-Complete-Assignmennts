@model EmployeeFormApp.Models.EmployeeForm

<h2>Delete Employee</h2>

<div>
    <h3>Are you sure you want to delete this employee?</h3>
    <div>
        <h4>@Model.FirstName @Model.LastName</h4>
        <p>Age: @Model.Age</p>
        <p>Date of Birth: @Model.DateOfBirth.ToString("yyyy-MM-dd")</p>
        <p>Country: @Model.Country</p>
        <p>Email Id: @Model.EmailId</p>
        <p>Gender: @Model.Gender</p>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </form>
</div>
